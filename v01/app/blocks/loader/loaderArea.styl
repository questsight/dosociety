.loaderArea
  z-index 100000
  background linear-gradient(90deg, #01587a, #E8EEF1, #f3ba00)
  overflow hidden
  position fixed
  left 0
  top 0
  right 0
  bottom 0
  display none
.loader
  img
    height 30vmin
    width auto
    margin: 0;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    position: absolute;
    top: calc(50% - 15vmin)
    left: calc(50% - 34vmin)
    animation-name: spin;
    animation-duration: 1s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
@keyframes spin
  from
    transform:rotate(0deg);
  to 
    transform:rotate(180deg);
    
    