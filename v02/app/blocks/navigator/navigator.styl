.navigator
  margin-top 20px
  margin-right -20px
  font-size 16px
  +responsive(xs)
    display none
    position fixed
    z-index 3
    background baseColor
    opacity 0.6
    height 100%
    top 0
    left 0
    width 195px
    margin-top 0
    margin-right 0
  ul
    list-style-type none
    margin-bottom 0
    li
      margin-left -60px
      padding 7px
      +responsive(xs)
        margin-left -40px
      &:hover, &:focus, &:active
        background themeColor
        img
          filter brightness(0) invert(1)
        a
          color lightColor
        +responsive(xs)
          a
            color accentColor
          img
            filter saturate(400%) hue-rotate(30deg) brightness(1.5) contrast(.7)
          
      img
        width 25px
        margin-right 10px
        margin-bottom 5px
        float left
        +responsive(xs)
          filter brightness(0) invert(1)
      a
        text-decoration none
        +responsive(xs)
          color lightColor