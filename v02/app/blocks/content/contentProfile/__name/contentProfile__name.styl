.contentProfile__name
  font-weight bold
  color lightColor
  font-size 28px
  font-style italic
  text-shadow baseColor 1px 0px, baseColor 1px 1px, baseColor 0px 1px, baseColor -1px 1px, baseColor -1px 0px, baseColor -1px -1px, baseColor 0px -1px, baseColor 1px -1px
  text-align center
  position absolute
  top 80px
  left 300px
  position absolute
  +responsive(md)
    left 250px
    font-size 25px
  +responsive(sm)
    font-size 20px
    left 270px
  +responsive(580px)
    transform translate(-50%, -50%)
    top 10%
    left 50%