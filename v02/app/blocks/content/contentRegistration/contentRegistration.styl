.contentRegistration
  background fondColor
  width 600px
  padding 20px
  margin 0
  transform translate(-50%, -50%)
  position absolute
  top 50%
  left 50%
  z-index 1
  border-radius: 30px
  animation-name contentRegistration
  animation-duration 2s
  animation-timing-function ease-in
  animation-iteration-count 1
  +responsive(xs)
    width 70%
  +responsive(xxs)
    width 100%
@keyframes contentRegistration {
  from {
    opacity 0
  }
  to {
    opacity 1
  }
}