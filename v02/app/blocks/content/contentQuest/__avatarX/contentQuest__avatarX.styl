.contentQuest__avatarX
  display none
  float left
  background lightColor
  border-radius 100px
  margin 0
  transform translate(-50%, -50%)
  position absolute
  top 50%
  left 50%
  +responsive(xs)
    top 30%
  +responsive(xxs)
    opacity 0
  img
    width 15vmin
    min-width 48px
    height 15vmin
    min-height 48px
    padding 15px
    border-radius 100px